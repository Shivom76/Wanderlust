<% layout("/boilerplate")%>
<body>
    <h2 class="row col-6 offset-3">Signup on WanderLust</h2>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="email" class="formm-label">Email</label>
                    <input type="text" name="email" id="email" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="username" class="formm-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="formm-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>

                <button class="btn btn-success mb-3" >Sign Up</button>

            </form>
        </div>
    </div>
</body>
